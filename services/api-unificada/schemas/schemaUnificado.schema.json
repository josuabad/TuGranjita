{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema Unificado",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "type": { "const": "detalle" },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "client": { "type": "object" },
              "ubicacionId": { "type": ["string", "null"] },
              "sensores": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "sensor": { "type": "object" },
                    "lecturas": { "type": "array" }
                  },
                  "required": ["sensor", "lecturas"]
                }
              }
            },
            "required": ["client", "ubicacionId", "sensores"]
          }
        }
      },
      "required": ["type", "data"]
    },
    {
      "properties": {
        "type": { "const": "resumen" },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sensor": { "type": "object" },
              "lecturas": {
                "type": "array",
                "items": { "type": "object" }
              }
            },
            "required": ["sensor", "lecturas"]
          }
        }
      },
      "required": ["type", "data"]
    },
    {
      "properties": {
        "type": { "const": "clientes" },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "nombre": { "type": ["string", "null"] },
              "correo_electronico": { "type": ["string", "null"] }
            },
            "required": ["nombre", "correo_electronico"]
          }
        }
      },
      "required": ["type", "data"]
    },
    {
      "properties": {
        "type": { "const": "proovedores" },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "nombre": { "type": ["string", "null"] },
              "correo_electronico": { "type": ["string", "null"] }
            },
            "required": ["nombre", "correo_electronico"]
          }
        }
      },
      "required": ["type", "data"]
    },
    {
      "properties": {
        "type": { "const": "cliente_detalle" },
        "data": { "type": "object" }
      },
      "required": ["type", "data"]
    },
    {
      "properties": {
        "type": { "const": "proveedor_detalle" },
        "data": { "type": "object" }
      },
      "required": ["type", "data"]
    }
  ]
}
